            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".service.tiles.ShowTapsService"
            android:enabled="false"
            android:exported="true"
            android:icon="@drawable/tile_icon_show_taps"
